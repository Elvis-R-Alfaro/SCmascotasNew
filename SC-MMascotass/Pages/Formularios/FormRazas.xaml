<Window x:Class="SC_MMascotass.Pages.Formularios.FormRazas"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SC_MMascotass.Pages.Formularios"
      mc:Ignorable="d" 
      Height="500" Width="800"
      Title="Agregar Raza" WindowStartupLocation="CenterScreen">


    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="113*"/>
            <ColumnDefinition Width="145*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="375"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Name="spNuevaCategoria">
            <Image Source="/Imagenes/mascota.png" Width="25" Margin="0 0 10 0"></Image>
            <TextBlock Text="Nueva Raza"
                        FontSize="18"
                       VerticalAlignment="Center"
                        />
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Name="spButton1" Grid.ColumnSpan="2" Margin="0" Width="260">
            <Button     Background="Transparent"
                        Foreground="Black"
                        FontSize="14"
                        BorderThickness="0"
                        Name="btnGuardar"
                        Padding="10" Click="btnGuardar_Click" Margin="0,0,0,-0.2">
                <StackPanel Orientation="Vertical" >
                    <Image Source="/Imagenes/iconos/guardar.png" HorizontalAlignment="Center" Width="25" Height="25"/>
                    <TextBlock Text="Guardar" HorizontalAlignment="Center"/>

                </StackPanel>

            </Button>
            <Button     Background="Transparent"
                        Foreground="Black"
                        FontSize="14"
                        BorderThickness="0"
                        Name="btnEditar"
                        Padding="10" Click="btnEditar_Click"  Margin="0,0,0,-0.2">
                <StackPanel Orientation="Vertical" >
                    <Image Source="/Imagenes/iconos/editar.png" HorizontalAlignment="Center" Width="25" Height="25"/>
                    <TextBlock Text="Editar" HorizontalAlignment="Center"/>

                </StackPanel>

            </Button>
            <Button     Background="Transparent"
                        Foreground="Black"
                        FontSize="14"
                        BorderThickness="0"
                        Name="btnEliminar"
                        Padding="10" Click="btnEliminar_Click"  Height="81" Margin="0,0,0,-0.2" VerticalAlignment="Top">
                <StackPanel Orientation="Vertical" >
                    <Image Source="/Imagenes/iconos/eliminar.png" HorizontalAlignment="Center" Width="25" Height="25"/>
                    <TextBlock Text="Eliminar" HorizontalAlignment="Center"/>

                </StackPanel>

            </Button>
            <Button     Background="Transparent"
                        Foreground="Black"
                        FontSize="14"
                        BorderThickness="0"
                        Name="btnLimpiar"
                        Padding="10" Click="btnLimpiar_Click">
                <StackPanel Orientation="Vertical" >
                    <Image Source="/Imagenes/iconos/recargar.png" HorizontalAlignment="Center" Width="25" Height="25"/>
                    <TextBlock Text="Limpiar" HorizontalAlignment="Center"/>

                </StackPanel>

            </Button>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0.8,-0.4,-0.6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>


                <Label Content="Especie" Grid.Row="0" Grid.Column="2" FontSize="15" VerticalAlignment="Center" Margin="0 4 0 0"/>
                <Label Content="Nombre de la Raza" Grid.Row="0" FontSize="15" VerticalAlignment="Center" Margin="0 4 0 0"/>
                <Label Content="Altura" Grid.Row="2" FontSize="15" VerticalAlignment="Center" Margin="0 4 0 0"/>
                <Label Content="Rango de Peso" Grid.Row="2" Grid.Column="2" FontSize="15" VerticalAlignment="Bottom" Margin="0,0,193.4,34" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
                <Label Content="Esperanza de Vida" Grid.Row="3" Grid.Column="0" FontSize="15" VerticalAlignment="Center" Margin="0 4 0 0"/>
                <Label Content="Actividad fisica" Grid.Row="3" Grid.Column="2" FontSize="15" VerticalAlignment="Center" Margin="0 4 0 0"/>
                <Label Content="Tipo de Pelo" Grid.Row="5" FontSize="15" VerticalAlignment="Center" Margin="0 4 0 0"/>

                <ComboBox Name="cmbesoecie" Width="145" FontSize="15" Grid.Column="3" Grid.Row="0" Margin="0 4 0 0" HorizontalAlignment="Left" />
                <TextBox Name="txtNombreRaza" FontSize="15" Grid.Column="1" Grid.Row="0" Margin="0 4 0 0"/>
                <ComboBox Name="cmbaltura" FontSize="15" Grid.Column="1" Grid.Row="2" Margin="0 4 0 0" >
                    <ComboBoxItem Content="15-35 cm"></ComboBoxItem>
                    <ComboBoxItem Content="35-45 cm"></ComboBoxItem>
                    <ComboBoxItem Content="45-55 cm"></ComboBoxItem>
                    <ComboBoxItem Content="70-80 cm"></ComboBoxItem>
                    <ComboBoxItem Content="Más de 80 cm"></ComboBoxItem>
                </ComboBox>
                <Button Width="50"  Grid.Column="4" ToolTip="Nueva Especie" Name="btnNuevaEspecie"  Background="#FCA311" Click="btnNuevaEspecie_Click"  HorizontalAlignment="Right" Margin="0 4 0 0">
                    <Image Source="/Imagenes/iconos/nuevo.png" Width="20"/>
                </Button>
                <ComboBox Name="cmbPesoIdeal" FontSize="15" Grid.Column="3" Grid.Row="2" Margin="0 4 0 0" >
                    <ComboBoxItem Content="1-3 kg"></ComboBoxItem>
                    <ComboBoxItem Content="3-10 kg"></ComboBoxItem>
                    <ComboBoxItem Content="10-25 kg"></ComboBoxItem>
                    <ComboBoxItem Content="25-45 kg"></ComboBoxItem>
                    <ComboBoxItem Content="45-100 kg"></ComboBoxItem>
                    <ComboBoxItem Content="Más de 100 kg"></ComboBoxItem>
                </ComboBox>
                <ComboBox Name="cmbEsperanzaVida" FontSize="15"  Grid.Column="1" Grid.Row="3" Margin="0 4 0 0" >
                    <ComboBoxItem Content="Menos de 8 años"></ComboBoxItem>
                    <ComboBoxItem Content="8-10 años"></ComboBoxItem>
                    <ComboBoxItem Content="10-12 años"></ComboBoxItem>
                    <ComboBoxItem Content="12-14 años"></ComboBoxItem>
                    <ComboBoxItem Content="14-20 años"></ComboBoxItem>
                    <ComboBoxItem Content="Más de 20 años"></ComboBoxItem>
                </ComboBox>
                <ComboBox Name="cmbActividadFisica" FontSize="15" Grid.Column="3" Grid.Row="3" Margin="0 4 0 0" >
                    <ComboBoxItem Content="Baja"></ComboBoxItem>
                    <ComboBoxItem Content="Media"></ComboBoxItem>
                    <ComboBoxItem Content="Alta"></ComboBoxItem>
                </ComboBox>
                <TextBox Name="txtTipoPelo" FontSize="15" Grid.Column="1" Grid.Row="5" Margin="0 4 0 0" />

            </Grid>
            <StackPanel Grid.Row="2"  Margin="0 20 0 0">
                <DataGrid Name="dgClientes"   AutoGenerateColumns="False" IsReadOnly="True" ItemsSource="{Binding Source=mascotas}" MaxHeight="310" ColumnWidth="*" GridLinesVisibility="Horizontal">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Raza" Binding="{Binding NombreRaza}" Width="80" />
                        <DataGridTextColumn Header="Especie" Binding="{Binding Descripcion}" />
                        <DataGridTextColumn Header="Altura" Binding="{Binding Altura}" />
                        <DataGridTextColumn Header="Rango de Peso" Binding="{Binding RangoPeso}" />
                        <DataGridTextColumn Header="Esperanza de Vida" Binding="{Binding EsperanzaVida}" />
                        <DataGridTextColumn Header="Actividad Fisica" Binding="{Binding ActividadFisica}" />
                        <DataGridTextColumn Header="Tipo de Pelo" Binding="{Binding TipoDePelo}" />
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
