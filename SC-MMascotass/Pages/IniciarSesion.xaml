<Window x:Class="SC_MMascotass.IniciarSesion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SC_MMascotass"
        mc:Ignorable="d"
        Title="Iniciar Sesion Mi Mascota" Height="450" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>            
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <StackPanel Orientation="Vertical">
            
            <Label Content="Iniciar Sesión" FontSize="30"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Image Source="/Imagenes/icono.png" Width="100"></Image>
            
        </StackPanel>

        <StackPanel Orientation="Vertical" Grid.Row="1">
            <Label Content="Nombre de Usuario" Grid.Row="1" FontSize="15" Margin="10"/>
            

            <TextBox Name="txtUsername" FontSize="15" Grid.Column="1" Grid.Row="1" Margin="0 0 10 0"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="2">
            <Label Content="Contraseña" Grid.Row="2" FontSize="15" Margin="10"/>
            <PasswordBox Name="pwbPassword" FontSize="15" Grid.Column="1" Grid.Row="2" Margin="0 0 10 0"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
            <Button Name="btnAceptar" Background="Transparent" FontSize="15" Grid.Row="3" Width="150" Height="75" Click="btnAceptar_Click" Margin="0 0 10 0">
                <StackPanel>
                    <Image Source="/Imagenes/log-in.png" HorizontalAlignment="Center" Width="25" Height="25"/>
                    <TextBlock Text="Iniciar Sesión" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>
            <Button Name="btnCerrar" FontSize="15" Grid.Row="3" Grid.Column="1" Width="150" Height="75" Background="Transparent" Click="btnCerrar_Click">
                <StackPanel>
                    <Image Source="/Imagenes/crossed.png" HorizontalAlignment="Center" Width="25" Height="25"/>
                    <TextBlock Text="Cancelar" HorizontalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
